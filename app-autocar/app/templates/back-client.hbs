<div class="bgPrimaryBlue w-full md:w-1/5 md:h-screen md:float-left md:fixed">

  <div class="bgGreyBlack m-0 text-center banner">
    <h3 class="m-0 p-0 text-white">Pimp My Trip - backoffice</h3>
  </div>

  <div class="p-6 text-center">
    <span class="m-0 font-thin tracking-wide">Navigation - Client</span>
  </div>

  {{!-- Menu --}}
  <nav>
    <ul class="menuBack list-reset">
      {{#link-to "back-client.client.dashboard"}}<li><i class="fas fa-home"></i> Tableau de bord</li>{{/link-to}}
      {{#link-to "back-client.client.profile"}}<li><i class="fas fa-user-circle"></i> Votre profil</li>{{/link-to}}
      {{#link-to "back-client.client.requests"}}<li><i class="far fa-file-alt"></i> Vos demandes de devis</li>{{/link-to}}
      {{#link-to "back-client.client.proposals"}}<li><i class="fas fa-question"></i> Propositions de devis</li>{{/link-to}}
      {{#link-to "back-client.client.folders"}}<li><i class="far fa-check-circle"></i> Devis acceptés</li>{{/link-to}}
