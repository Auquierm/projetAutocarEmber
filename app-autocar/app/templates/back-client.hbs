  </nav>
</div>

{{!-- body --}}
<div class="md:w-4/5 md:float-right relative md:min-h-screen">
  <div class="bgGreyBlack text-white pr-20 banner text-center md:text-right">
    <input class="bg-teal-dark hover:bg-teal text-white font-bold py-2 px-4 rounded" type="button" value="Logout"  onclick={{action "logout"}}>
  </div>

  <div class="p-3 mb-10">
    {{outlet}}
  </div>

  {{!-- footer --}}
  <div class="footer bg-white pr-20 banner text-center md:flex md:justify-between absolute pin-b w-full text-xs text-grey-dark -mb-24 md:-mb-0">
    <div class="md:text-left">
      Copyright © 2019 Technocité, Pimp My Trip. Tous droits réservés
    </div>
    <div class="mt-3 md:mt-0">
      <ul class="list-reset flex justify-center">
        <li>{{#link-to "home"}}Home{{/link-to}}</li>
        <li class="pl-4">{{#link-to "devis"}}Voyage{{/link-to}}</li>
        <li class="pl-4">{{#link-to "home"}}A propos{{/link-to}}</li>
        <li class="pl-4">{{#link-to "home"}}Contact{{/link-to}}</li>
      </ul>
    </div>

  </div>
