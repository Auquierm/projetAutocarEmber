<div><a href="#" {{action "back"}}><i class="fas fa-caret-left"></i>&nbsp; Retour</a></div>
<div class="text-center sm:text-xs lg:text-base xl:text-xl">
  <h3>Liste devis</h3>
</div>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue sm:text-xs lg:text-base xl:text-xl">
        <th class="w-1/5">Date du devis</th>
        <th class="w-1/5">Nom client</th>
        <th class="w-1/5">Destination</th>
        <th class="w-1/5">Statut</th>
        <th class="w-1/5">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |quote|}}
      {{#if (compare quote.status "===" "attente" )}}
      <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest sm:text-xs lg:text-base xl:text-xl">
        <td class="w-1/5 text-center py-1">{{quote.dateCreation}}</td>
        <td class="w-1/5 text-center py-1">{{quote.idClient.idUser.firstname}}</td>
        <td class="w-1/5 text-center py-1">{{quote.placeArrival.city}}</td>
        <td class="w-1/5 text-center py-1">{{quote.status}}</td>
        <td class="w-1/5 text-center py-1">{{#link-to "back-agent.agent.quote-card" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
      </tr>
      {{/if}}
      {{#if (compare quote.status "===" "traitement" )}}
      <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest sm:text-xs lg:text-base xl:text-xl">
        <td class="w-1/5 text-center py-1">{{quote.dateCreation}}</td>
        <td class="w-1/5 text-center py-1">{{quote.idClient.idUser.firstname}}</td>
        <td class="w-1/5 text-center py-1">{{quote.placeArrival.city}}</td>
        <td class="w-1/5 text-center py-1">{{quote.status}}</td>
        <td class="w-1/5 text-center py-1">{{#link-to "back-agent.agent.quote-card" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
      </tr>
      {{/if}}
      {{/each}}
    </tbody>
  </table>
</div>

{{outlet}}