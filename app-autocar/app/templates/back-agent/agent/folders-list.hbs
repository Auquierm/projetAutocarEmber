<h3 class="mt-4">Liste dossiers</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue">
        <th class="w-1/4">Date création</th>
        <th class="w-1/4">Nom Client</th>
        <th class="w-1/4">Destination</th>
        <th class="w-1/4">Actions</th>
      </tr>
    </thead>
    {{#each model as |quote|}}
      {{#if (compare quote.status "===" "valide")}}
        <tbody>
          <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest">
            <td class="w-1/4 text-center">{{quote.dateCreation}}</td>
            <td class="w-1/4 text-center">{{quote.idClient.idUser.firstname}}</td>
            <td class="w-1/4 text-center">{{quote.placeArrival.city}}</td>
            <td class="w-1/4 text-center"><i class="fas fa-info-circle"></i></td>
          </tr>
        </tbody>
      {{/if}}
    {{/each}}

  </table>
  {{!-- <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.folders"}}Voir tous vos devis acceptés{{/link-to}}
  </div> --}}
</div>
<div class="w-1/3 bg-white p-4 shadow-md mt-4">
  <h4>Créer un dossier</h4>
  <label>Choisir un devis:</label>
  <select class="ml-6">
    <option>Dossier n°1</option>
    <option>Dossier n°2</option>
    <option>Dossier n°3</option>
  </select>
  <button class="pt-2 pb-2 pr-6 pl-6 ml-6 text-white bgPrimaryBlue">Créer</button>

</div>

{{outlet}}