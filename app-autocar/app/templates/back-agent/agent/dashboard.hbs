<h2>Tableau de bord - Agent</h2>

<h3 class="mt-2">Liste clients</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue">
        <th class="w-1/4">Société</th>
        <th class="w-1/4">Nom</th>
        <th class="w-1/4">Prénom</th>
        <th class="w-1/4">Actions</th>
      </tr>
    </thead>
    {{#each model as |client|}}
      <tbody>
        <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest">
          <td class="w-1/4 text-center ">{{client.societe}}</td>
          <td class="w-1/4 text-center">{{client.idUser.lastname}}</td>
          <td class="w-1/4 text-center">{{client.idUser.firstname}}</td>
          <td class="w-1/4 text-center">{{#link-to "back-agent.agent.client-card" client.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
        </tr>
      </tbody>
    {{/each}}
  </table>
