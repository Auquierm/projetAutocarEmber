<div class="mx-auto h-full font-sans">
  <form class="md:w-3/4 lg:w-2/3 xl:w-1/2 mx-auto px-8 sm:pt-0 md:pt-4 pb-8 sm:mb-2 lg:mb-4">

    <div class="sm:mb-2 lg:mb-4 sm:text-xs md:text-sm lg:text-lg">
      <span class="font-bold">Programme journalier</span>
    </div>

    <div>
      <div class="border-b border-blue pb-1 sm:mb-2 lg:mb-4 pt-2">
        <span class="sm:text-xs lg:text-lg text-blue font-bold">Entrez l'heure, l'adresse et l'intitulé de l'activité</span>
      </div>

      {{!-- div (date/heure départ) pays et ville --}}
      <div class="md:w-4/5 mx-auto md:flex sm:text-xs lg:text-base">
        <div class="md:flex-1 md:px-1 sm:mb-2 lg:mb-4">
          {{ember-flatpickr
          allowInput=true
          appendDataInput=true
          disableMobile=true
          classNames=classString
          date=(readonly dateValue)
          enableTime=true
          locale="fr"
          altFormat="Y-m-d"
          minDate=minDate
          minuteIncrement=1
          time_24hr=true
          onClose=(action "onCloseTime")
          onChange=(action "onChangeTime")
          onReady=(action "onReadyTime")
          class="block appearance-none bg-white sm:w-full border border-grey-light hover:border-grey px-2 py-2 rounded shadow"
          placeholder="Départ"
          }}
        </div>
        <div class="md:flex-1 md:px-1 sm:mb-2 lg:mb-4 flex">
          <select onchange="myFunctionFlags" name="flag" class="nofocus appearance-none bg-white border border-grey-light hover:border-grey px-2 md:flex-1 w-full rounded shadow" id="flags required">
            <option value="belgique">Belgique</option>
            <option value="france">France</option>
            <option value="espagne">Espagne</option>
          </select>
          <input type="hidden" id="printFlags">
          {{input type="text" value=contactConfirmDpCity class="block appearance-none w-full md:flex-1 bg-white border border-grey-light hover:border-grey px-2 py-2 rounded shadow" placeholder="ville"}}
        </div>
      </div>
      {{!-- div Rue, numéro et code postal --}}
      <div class="md:w-4/5 mx-auto md:flex sm:text-xs lg:text-base">
        <div class="md:flex-1 md:px-1 sm:mb-2 lg:mb-4">
          {{input type="text" value=contactConfirmConfirmStreet class="block appearance-none w-full bg-white
          border border-grey-light hover:border-grey px-2 py-2 rounded shadow" placeholder="Rue"}}
        </div>
        <div class="md:flex-1 md:px-1 sm:mb-2 lg:mb-4 flex">
          <div class="flex-1">
            {{input type="text" value=contactConfirmNumber class="block appearance-none w-full
            bg-white border border-grey-light hover:border-grey px-2 py-2 rounded shadow"
            placeholder="Numéro"}}
          </div>
          <div class="flex-1">
            {{input type="text" value=contactConfirmPc class="block appearance-none w-full bg-white border
            border-grey-light hover:border-grey px-2 py-2 rounded shadow" placeholder="Code postal"}}
          </div>
        </div>
      </div>

    </div>
    {{!-- div étape 3 --}}
    <div>

      <div class="md:w-4/5 mx-auto md:flex sm:text-xs lg:text-base">
        <div class="md:flex-1 md:px-1 sm:mb-2 lg:mb-4 flex justify-end">
          <input type="submit" value="Ajouter" class="block appearance-none bg-blue text-white sm:w-1/4 border border-grey-light hover:border-grey px-2
                    py-2 rounded shadow">
        </div>
      </div>
    </div>
  </form>
</div>