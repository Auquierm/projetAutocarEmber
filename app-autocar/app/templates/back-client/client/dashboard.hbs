<h2>Tableau de bord - {{model.idUser.firstname}} {{model.idUser.lastname}}</h2>

<h3 class="mt-2">Vos demandes de devis</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue">
        <th class="w-1/3">Id</th>
        <th class="w-1/3">Date du devis</th>
        <th class="w-1/3">Actions</th>
      </tr>
    </thead>
    {{#each model.quotesId as |quote|}}
      {{#if (compare quote.status "===" "attente") }}
        <tbody>
          <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest">
            <td class="w-1/3 text-center">{{quote.numFolder}}</td>
            <td class="w-1/3 text-center">{{quote.dateCreation}}</td>
            <td class="w-1/3 text-center">{{#link-to "back-client.client.request" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
          </tr>
        </tbody>
      {{/if}}
    {{/each}}
  </table>
  <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.requests"}}Voir toutes vos demandes de devis{{/link-to}}
  </div>
</div>

<h3 class="mt-4">Propositions de devis</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue">
        <th class="w-1/3">Id</th>
        <th class="w-1/3">Date du devis</th>
        <th class="w-1/3">Actions</th>
      </tr>
    </thead>
    {{#each model.quotesId as |quote|}}
      {{#if (compare quote.status "===" "traitement") }}
        <tbody>
          <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest">
            <td class="w-1/3 text-center">{{quote.numFolder}}</td>
            <td class="w-1/3 text-center">{{quote.dateCreation}}</td>
            <td class="w-1/3 text-center">{{#link-to "back-client.client.proposal" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
          </tr>
        </tbody>
      {{/if}}
    {{/each}}
  </table>
  <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.proposals"}}Voir toutes les propositions de devis{{/link-to}}
  </div>
</div>

<h3 class="mt-4">Devis acceptés</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue">
        <th class="w-1/3">Id</th>
        <th class="w-1/3">Date du devis</th>
        <th class="w-1/3">Actions</th>
      </tr>
    </thead>
    {{#each model.quotesId as |quote|}}
      {{#if (compare quote.status "===" "valide") }}
        <tbody>
          <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest">
            <td class="w-1/3 text-center">{{quote.numFolder}}</td>
            <td class="w-1/3 text-center">{{quote.dateCreation}}</td>
            <td class="w-1/3 text-center">{{#link-to "back-client.client.folder" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
          </tr>
        </tbody>
      {{/if}}
    {{/each}}
  </table>
  <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.folders"}}Voir tous vos devis acceptés{{/link-to}}
  </div>
</div>




{{outlet}}