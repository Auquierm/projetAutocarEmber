<div class="text-center sm:text-xs lg:text-base xl:text-xl">
  <h2>Tableau de bord - {{model.idUser.firstname}} {{model.idUser.lastname}}</h2>
</div>

<h3 class="mt-2 sm:text-xs lg:text-base xl:text-xl">Vos demandes de devis</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue sm:text-xs lg:text-base xl:text-xl">
        <th class="w-1/4">Id</th>
        <th class="w-1/4">Date du devis</th>
        <th class="w-1/4">Destination</th>
        <th class="w-1/4">Actions</th>
      </tr>
    </thead>
    {{#each model.quotesId as |quote|}}
    {{#if (compare quote.status '===' 'attente') }}
    <tbody>
      <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest sm:text-xs lg:text-base xl:text-xl">
        <td class="w-1/4 text-center py-1">{{quote.numFolder}}</td>
        <td class="w-1/4 text-center py-1">{{quote.dateCreation}}</td>
        <td class="w-1/4 text-center py-1">{{quote.placeArrival.city}}</td>
        <td class="w-1/4 text-center py-1">{{#link-to "back-client.client.request" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
      </tr>
    </tbody>
    {{/if}}
    {{/each}}
  </table>
  <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.requests"}}Voir toutes vos demandes de devis{{/link-to}}
  </div>
</div>

<h3 class="mt-4 sm:text-xs lg:text-base xl:text-xl">Propositions de devis</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue sm:text-xs lg:text-base xl:text-xl">
        <th class="w-1/4">Id</th>
        <th class="w-1/4">Date du devis</th>
        <th class="w-1/4">Destination</th>
        <th class="w-1/4">Actions</th>
      </tr>
    </thead>
    {{#each model.quotesId as |quote|}}
    {{#if (compare quote.status '===' 'traitement') }}
    <tbody>
      <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest sm:text-xs lg:text-base xl:text-xl">
        <td class="w-1/4 text-center py-1">{{quote.numFolder}}</td>
        <td class="w-1/4 text-center py-1">{{quote.dateCreation}}</td>
        <td class="w-1/4 text-center py-1">{{quote.placeArrival.city}}</td>
        <td class="w-1/4 text-center py-1">{{#link-to "back-client.client.proposal" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
      </tr>
    </tbody>
    {{/if}}
    {{/each}}
  </table>
  <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.proposals"}}Voir toutes les propositions de devis{{/link-to}}
  </div>
</div>

<h3 class="mt-4 sm:text-xs lg:text-base xl:text-xl">Devis acceptés</h3>

<div class="bg-white p-4 shadow-md mt-4">
  <table class="w-full">
    <thead>
      <tr class="p-2 text-white bgPrimaryBlue sm:text-xs lg:text-base xl:text-xl">
        <th class="w-1/4">Id</th>
        <th class="w-1/4">Date du devis</th>
        <th class="w-1/4">Destination</th>
        <th class="w-1/4">Actions</th>
      </tr>
    </thead>
    {{#each model.quotesId as |quote|}}
    {{#if (compare quote.status '===' 'valide') }}
    <tbody>
      <tr class="p-2 text-black hover:bg-blue-lighter hover:text-blue-darkest sm:text-xs lg:text-base xl:text-xl">
        <td class="w-1/4 text-center py-1">{{quote.numFolder}}</td>
        <td class="w-1/4 text-center py-1">{{quote.dateCreation}}</td>
        <td class="w-1/4 text-center py-1">{{quote.placeArrival.city}}</td>
        <td class="w-1/4 text-center py-1">{{#link-to "back-client.client.folder" quote.id}}<i class="fas fa-info-circle"></i>{{/link-to}}</td>
      </tr>
    </tbody>
    {{/if}}
    {{/each}}
  </table>
  <div class="text-right italic text-xs mt-2">
    {{#link-to "back-client.client.folders"}}Voir tous vos devis acceptés{{/link-to}}
  </div>
</div>




{{outlet}}